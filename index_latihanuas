        // Script sama
        function checkAdv() {
            const ans = document.getElementById('advAnswer').value.trim().toUpperCase();
            const fb = document.getElementById('advFeedback');
            if (ans === "WPA3") {
                fb.innerHTML = '<div class="feedback correct">Benar!</div>';
                showCert();
            } else {
                fb.innerHTML = '<div class="feedback incorrect">Salah. Jawaban: WPA3.</div>';
            }
        }
        function showRemedial(level) {
            const remedialContent = document.getElementById('remedialContent');
            let content = '<h3>Remedial Level ' + (level + 1) + '</h3>';
            if (level === 0) {
                content += '<p>Dasar: Rangkuman IP, topologi, routing, wireless standards, encryption, regulations.</p>';
            } else if (level === 1) {
                content += '<p>Menengah: Subnet, STP, OSPF, channels, WPA, GDPR.</p>';
            } else if (level === 2) {
                content += '<p>Lanjutan: VLSM, VTP, EIGRP, MU-MIMO, EAP, DPIA.</p>';
            } else if (level === 3) {
                content += '<p>Master: Summary routes, MSTP, BGP, Wi-Fi 7, KRACK, GDPR articles.</p>';
            }
            remedialContent.innerHTML = content;
            document.getElementById('remedial').classList.remove('hidden');
        }

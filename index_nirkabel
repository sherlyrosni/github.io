        // Script sama
        function checkAdv() {
            const ans = document.getElementById('advAnswer').value.trim().toUpperCase();
            const fb = document.getElementById('advFeedback');
            if (ans === "5GHZ") {
                fb.innerHTML = '<div class="feedback correct">Benar!</div>';
                showCert();
            } else {
                fb.innerHTML = '<div class="feedback incorrect">Salah. Jawaban: 5GHz.</div>';
            }
        }
        function showRemedial(level) {
            const remedialContent = document.getElementById('remedialContent');
            let content = '<h3>Remedial Level ' + (level + 1) + '</h3>';
            if (level === 0) {
                content += '<p>Dasar: Standar 802.11a/b/g/n/ac/ax, Bluetooth, Zigbee basics.</p>';
            } else if (level === 1) {
                content += '<p>Menengah: Kecepatan, channel, SSID, modes, frames.</p>';
            } else if (level === 2) {
                content += '<p>Lanjutan: Modulation, CSMA/CA, QoS, Bluetooth profiles.</p>';
            } else if (level === 3) {
                content += '<p>Master: Advanced features, 5G components, Wi-Fi 6/7 specs.</p>';
            }
            remedialContent.innerHTML = content;
            document.getElementById('remedial').classList.remove('hidden');
        }
